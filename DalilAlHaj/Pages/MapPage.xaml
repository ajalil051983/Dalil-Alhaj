<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mapsui="clr-namespace:Mapsui.UI.Maui;assembly=Mapsui.UI.Maui"
             xmlns:res="clr-namespace:DalilAlHaj.Resources.Localization"
             x:Class="DalilAlHaj.Pages.MapPage"
             Title="{x:Static res:AppResources.Map}"
             BackgroundColor="{AppThemeBinding Light=#F5F5F5, Dark=#1C1C1E}">

    <Grid RowDefinitions="Auto,*">
        <!-- Header -->
        <Border Grid.Row="0" 
                BackgroundColor="{AppThemeBinding Light=#2C3E50, Dark=#1E1E1E}" 
                StrokeShape="Rectangle"
                StrokeThickness="0"
                Padding="20"
                Margin="0">
            <VerticalStackLayout Spacing="5">
                <Label Text="{x:Static res:AppResources.Map}" 
                       FontSize="24" 
                       FontAttributes="Bold"
                       TextColor="White"
                       HorizontalOptions="Center" />
                <Label Text="{x:Static res:AppResources.MapRoute}" 
                       FontSize="14"
                       TextColor="White"
                       HorizontalOptions="Center" />
            </VerticalStackLayout>
        </Border>

        <!-- OpenStreetMap using Mapsui -->
        <mapsui:MapControl x:Name="HajjMapControl" 
                           AutomationId="MapControlID"
                           Grid.Row="1" />
    </Grid>

</ContentPage>
